generator client {
  provider = "prisma-client-js"
}

generator graphql {
  provider                  = "typegraphql-prisma"
  emitIdAsIDType            = false
  emitTranspiledCode        = false
  emitOnly                  = ["enums", "models", "relationResolvers", "outputs"] // ["enums", "models",  "crudResolvers", "relationResolvers", "inputs", "outputs"]
  omitInputFieldsByDefault  = ["id", "createdAt", "updatedAt"]
  omitOutputFieldsByDefault = ["password"]
}

datasource db {
  provider = "sqlite"
  url      = "file:.dev.db"
}

model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  userName  String    @unique
  email     String?   @unique
  phone     String?   @unique
  password  String
  Product   Product[]
}

model Product {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String
  description String
  batch       String    @unique
  producedAt  DateTime
  expiredAt   DateTime
  uses        Product[] @relation("productUses")
  usedIn      Product[] @relation("productUses")
  author      User      @relation(fields: [userId], references: [id])
  userId      String    @ignore
}

model Customer {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String
  email     String?  @unique
  phone     String?  @unique
  address   String?
}
